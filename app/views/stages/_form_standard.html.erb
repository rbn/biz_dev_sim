<%= form_for(@stage) do |f| %>
  <% if @stage.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@stage.errors.count, "error") %> prohibited this stage from being saved:</h2>

      <ul>
      <% @stage.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <h3> Standard page layout </h3>

  <div class="field">
    <%= f.label :label %><br />
    <%= f.text_field :label %>
  </div>
  <div class="field">
    <%= f.label :internal_name %><br />
    <%= f.text_field :internal_name, disabled: true %>
  </div>
  <div class="field">
    <%= f.label :start %><br />
    <%= f.check_box :start %>
  </div>
  <div class="field">
    <%= f.label :color %><br />
    <%= f.text_field :color %>
  </div>
  <div class="field">
    <%= f.label :featured_text %><br />
    <%= f.text_area :featured_text, cols: 80 %>
  </div>
  <div class="field">
    <%= f.label :featured_image_url %><br />
    <%= f.text_field :featured_image_url %><br />
    <%= image_tag @stage.featured_image_url %>
  </div>
  <div class="field">
    <%= f.label :nexts %><br />
    <ul>
    <% @stage.nexts.each do |n| %>
      <li style="margin-left:30px;"><%= n %><br /></li>
    <% end %>
    </ul>
  </div>

  <%= f.fields_for :questions do |builder| %>
    <%= render 'question_fields', f: builder %>
  <% end %>
  <%= link_to 'add question', '#', { class: 'add_fields', data: { association: 'questions', content: get_form_fields(f, :questions) } } %>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>

